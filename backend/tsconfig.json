{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,            /* 엄격한 타입 체크 활성화 (추천) */
    "esModuleInterop": true,   /* CommonJS 모듈을 가져올 수 있게 허용 */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}